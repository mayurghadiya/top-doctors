<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/home_page_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layoutDirection="inherit"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#103c61"
                android:paddingStart="@dimen/main_container_padding_start_end"
                android:paddingEnd="@dimen/main_container_padding_start_end"
                android:paddingBottom="@dimen/main_container_padding_bottom"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/top_bar_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_bar_main_layout_height"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/swipe_menu"
                            android:layout_width="@dimen/swipe_menu_width"
                            android:layout_height="@dimen/swipe_menu_height"
                            android:src="@mipmap/menu"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/swipe_menu_padding_top"
                            android:gravity="left|center|center_horizontal|center_vertical"
                            android:paddingBottom="@dimen/swipe_menu_padding_bottom"
                            android:layout_marginStart="@dimen/swipe_menu_margin_start"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/imgLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imglogo_height"
                            android:src="@mipmap/top_icon"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/imglogo_padding_top"
                            android:layout_marginLeft="@dimen/imglogo_margin_left"
                            android:layout_weight="0.11"
                            android:layout_marginBottom="@dimen/imglogo_margin_bottom"/>

                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/hope_page_main_search"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/hope_page_main_search_height"
                    android:textColor="#bcbbc0"
                    android:drawableStart="@mipmap/search"
                    android:padding="@dimen/hope_page_main_search_padding"
                    android:drawablePadding="@dimen/hope_page_main_search_drawable_padding"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColorHint="#bcbbc0"
                    android:background="#ffffff"
                    android:textSize="@dimen/hope_page_main_search_textsize"
                    android:hint="@string/search_ex" />

            </LinearLayout>
            <!--Search-->
            <LinearLayout
                android:id="@+id/search_bar_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/search_bar_middle_padding_top"
                android:background="#E7EBEE">

                <LinearLayout
                    android:id="@+id/search_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:paddingStart="@dimen/doctor_search_padding_start_end"
                    android:paddingEnd="@dimen/doctor_search_padding_start_end"
                    android:paddingTop="@dimen/search_content_margin_top_bottom"
                    android:paddingBottom="@dimen/search_content_margin_top_bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/doctors"
                            android:layoutDirection="locale"
                            android:layout_marginEnd="@dimen/search_box_margin_end"/>

                        <TextView
                            android:id="@+id/home_page_doctor_search_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:textColor="#010101"
                            android:backgroundTint="#ffffff"
                            android:drawableEnd="@mipmap/dropdown_arrow"
                            android:drawablePadding="@dimen/search_content_drawable_padding"
                            android:maxLines="1"
                            android:textColorHint="#010101"
                            android:textAlignment="viewStart"
                            android:inputType="text"
                            android:textSize="@dimen/search_text_size"
                            android:gravity="center"
                            android:hint="@string/search_doctor_label"/>

                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/border_height"
                        android:background="#D3D3D3"
                        android:layout_marginBottom="@dimen/expandable_last_border_margin"
                        android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>
                    <LinearLayout
                        android:id="@+id/p_expandable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/doctor_search_dropdown_margin_start">
                            <LinearLayout
                                android:layout_marginTop="@dimen/expandable_margin_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/example_single_layout_height">
                                    <Spinner
                                        android:id="@+id/spinner_location"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/country_name"
                                        android:background="@null"
                                        android:spinnerMode="dialog"
                                        android:textColor="#bcbbc0"/>
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical|center|right"
                                        android:src="@mipmap/dropdown_arrow"
                                        android:layout_alignEnd="@+id/spinner_location"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/border_height"
                                android:background="#D3D3D3"
                                android:layout_marginBottom="@dimen/expandable_layout_border_separator_margin_bottom"
                                android:layout_marginStart="@dimen/expandable_layout_border_separator_margin_start_top"
                                android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:id="@+id/speciality_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/example_single_layout_height">
                                    <Spinner
                                        android:id="@+id/spinner_speciality"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/speciality"
                                        android:background="@null"
                                        android:spinnerMode="dialog"/>
                                    <ImageView
                                        android:id="@+id/speciality_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:src="@mipmap/dropdown_arrow"
                                        android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/border_height"
                                android:background="#D3D3D3"
                                android:layout_marginBottom="@dimen/expandable_layout_border_separator_margin_bottom"
                                android:layout_marginStart="@dimen/expandable_layout_border_separator_margin_start_top"
                                android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:id="@+id/gender_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/example_single_layout_height">
                                    <Spinner
                                        android:id="@+id/spinner1_gender"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/gender"
                                        android:background="@null"
                                        android:spinnerMode="dialog"/>
                                    <ImageView
                                        android:id="@+id/gender_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/dropdown_arrow"
                                        android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/border_height"
                                android:background="#D3D3D3"
                                android:layout_marginBottom="@dimen/expandable_last_border_margin"
                                android:layout_marginStart="@dimen/expandable_layout_border_separator_margin_start_top"
                                android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/border_height"
                            android:background="#D3D3D3"
                            android:layout_marginBottom="@dimen/expandable_last_border_margin"
                            android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_page_search_hospital_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#010101"
                        android:backgroundTint="#ffffff"
                        android:drawableStart="@mipmap/hospitals"
                        android:drawablePadding="@dimen/search_content_drawable_padding"
                        android:maxLines="1"
                        android:textColorHint="#010101"
                        android:textAlignment="viewStart"
                        android:inputType="text"
                        android:textSize="@dimen/search_text_size"
                        android:gravity="center"
                        android:hint="@string/search_hospital_label"
                        android:layout_marginTop="@dimen/search_box_margin_top"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#D3D3D3"
                        android:layout_marginBottom="@dimen/border_separator_margin_bottom"
                        android:layout_marginTop="@dimen/border_separator_margin_top"/>

                    <TextView
                        android:id="@+id/home_page_search_clinics_textview"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#010101"
                        android:backgroundTint="#ffffff"
                        android:drawablePadding="@dimen/search_content_drawable_padding"
                        android:maxLines="1"
                        android:textColorHint="#010101"
                        android:textAlignment="viewStart"
                        android:drawableStart="@mipmap/clinics"
                        android:inputType="text"
                        android:textSize="@dimen/search_text_size"
                        android:gravity="center"
                        android:hint="@string/search_clinics_label"
                        android:layout_marginTop="@dimen/search_box_margin_top"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#D3D3D3"
                        android:layout_marginBottom="@dimen/border_separator_margin_bottom"
                        android:layout_marginTop="@dimen/border_separator_margin_top"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_page_lab_search"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:textColor="#010101"
                            android:backgroundTint="#ffffff"
                            android:drawablePadding="@dimen/search_content_drawable_padding"
                            android:maxLines="1"
                            android:textColorHint="#010101"
                            android:textAlignment="viewStart"
                            android:drawableStart="@mipmap/labs"
                            android:inputType="text"
                            android:textSize="@dimen/search_text_size"
                            android:gravity="center"
                            android:hint="@string/search_labs_label"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/labs"
                            android:layoutDirection="locale"
                            android:layout_marginEnd="@dimen/search_box_margin_end"/>

                        <TextView
                            android:id="@+id/home_page_search_lab_textview"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:textColor="#010101"
                            android:backgroundTint="#ffffff"
                            android:drawableEnd="@mipmap/dropdown_arrow"
                            android:drawablePadding="@dimen/search_content_drawable_padding"
                            android:maxLines="1"
                            android:textColorHint="#010101"
                            android:textAlignment="viewStart"
                            android:inputType="text"
                            android:textSize="@dimen/search_text_size"
                            android:gravity="center"
                            android:hint="@string/search_labs_label"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lab_expandable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/doctor_search_dropdown_margin_start">

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/border_height"
                                android:background="#D3D3D3"
                                android:layout_marginBottom="@dimen/expandable_layout_border_separator_margin_bottom"
                                android:layout_marginStart="@dimen/expandable_layout_border_separator_margin_start_top"
                                android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:id="@+id/lab_speciality_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/example_single_layout_height">
                                    <Spinner
                                        android:id="@+id/lab_spinner_speciality"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/speciality"
                                        android:background="@null"
                                        android:spinnerMode="dialog"/>
                                    <ImageView
                                        android:id="@+id/lab_speciality_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:src="@mipmap/dropdown_arrow"
                                        android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/border_height"
                                android:background="#D3D3D3"
                                android:layout_marginBottom="@dimen/expandable_layout_border_separator_margin_bottom"
                                android:layout_marginStart="@dimen/expandable_layout_border_separator_margin_start_top"
                                android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:id="@+id/lab_gender_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/example_single_layout_height">
                                    <Spinner
                                        android:id="@+id/lab_spinner_gender"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/gender"
                                        android:background="@null"
                                        android:spinnerMode="dialog"/>
                                    <ImageView
                                        android:id="@+id/lab_gender_arrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/dropdown_arrow"
                                        android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/border_height"
                                android:background="#D3D3D3"
                                android:layout_marginBottom="@dimen/expandable_last_border_margin"
                                android:layout_marginStart="@dimen/expandable_layout_border_separator_margin_start_top"
                                android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/border_height"
                            android:background="#D3D3D3"
                            android:layout_marginBottom="@dimen/expandable_last_border_margin"
                            android:layout_marginTop="@dimen/expandable_layout_border_separator_margin_start_top"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E7EBEE">
                <LinearLayout
                    android:id="@+id/color_separator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/color_separator_margin_top"
                    android:background="#E7EBEE"><!--E7EBEE-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#ffffff"
                        android:layout_marginStart="@dimen/search_result_margin_start_end"
                        android:layout_marginEnd="@dimen/search_result_margin_start_end">
                        <LinearLayout
                            android:id="@+id/nearby_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/border">
                        </LinearLayout>
                    </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
