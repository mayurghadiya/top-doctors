<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="@dimen/user_profile_padding_start"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_a_doctor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_comment_marginStart"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_name_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monica E."
                        android:textColor="@color/black"
                        android:textSize="@dimen/profile_comment_doctor_title_font_size"/>
                    <TextView
                        android:id="@+id/comment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="1 Month ago"
                        android:textColor="@color/black"
                        android:textSize="@dimen/profile_comment_time_text_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/profile_comment_count_paddingStart">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/profile_details_table_image_layout_height"
                            android:src="@mipmap/clinics"/>
                        <TextView
                            android:id="@+id/users_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/profile_comment_count_text_paddingStart"
                            android:text="4"
                            android:textSize="@dimen/profile_comment_text_text_size"
                            android:textColor="@color/reviewTextColor"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/profile_details_table_image_layout_height"
                            android:src="@mipmap/review_1"
                            android:paddingStart="@dimen/profile_comment_image_padding_start"/>
                        <TextView
                            android:id="@+id/star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/profile_comment_count_text_paddingStart"
                            android:text="53"
                            android:textSize="@dimen/profile_comment_text_text_size"
                            android:textColor="@color/reviewTextColor"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/profile_details_table_image_layout_height"
                            android:src="@mipmap/profile_camera"
                            android:paddingStart="@dimen/profile_comment_image_padding_start"/>
                        <TextView
                            android:id="@+id/user_photos_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/profile_comment_count_text_paddingStart"
                            android:text="15"
                            android:textSize="@dimen/profile_comment_text_text_size"
                            android:textColor="@color/reviewTextColor"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/profile_comment_badges_height"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/badges_4"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style= "@style/CustomRatingBar"
                        android:id="@+id/userRating"
                        android:numStars="5"
                        android:rating="5"
                        android:stepSize="0.01"
                        android:isIndicator="true"
                        android:paddingTop="2dp"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>